# ================================================
# ZOOM CONTROL CENTER - Environment Variables
# ================================================

# Server
PORT=3001
PUBLIC_URL=https://your-app.up.railway.app
PUBLIC_BASE_URL=https://your-app.up.railway.app
APP_PUBLIC_URL=https://your-app.up.railway.app
LOG_LEVEL=info

# ------------------------------------------------
# ZOOM API
# ------------------------------------------------
ZOOM_ACCOUNT_ID=your_account_id
ZOOM_CLIENT_ID=your_client_id
ZOOM_CLIENT_SECRET=your_client_secret
ZOOM_SECRET_TOKEN=your_webhook_secret_token

# ------------------------------------------------
# AZURE / MICROSOFT GRAPH (E-Mail)
# ------------------------------------------------
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
EMAIL_FROM=de@leadquelle.ai
ADMIN_EMAIL=de@leadquelle.ai

# ------------------------------------------------
# LEADQUELLE AI - Lead Generation
# ------------------------------------------------
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_GEOCODING_API_KEY=your_geocoding_api_key
LEADQUELLE_EMAIL=de@leadquelle.ai
MULTI_BOOKING_URL=https://us06web.zoom.us/meeting/register/your_meeting_id
SUMMARY_EMAIL=de@leadquelle.ai

# ------------------------------------------------
# OPENAI - Meeting Summaries & AI
# ------------------------------------------------
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
AI_FOLLOWUP_ENABLED=true
AI_FOLLOWUP_SEND=true

# ------------------------------------------------
# SEQUENCES & AUTOMATION
# ------------------------------------------------
LEAD_OUTREACH_ENABLED=true
REENGAGEMENT_ENABLED=true
SEQUENCE_PROCESSOR_ENABLED=true
SEQUENCE_SENDING_ENABLED=true
SEQUENCE_BOOKING_URL=https://us06web.zoom.us/meeting/register/your_meeting_id
SEQUENCE_SENDER_NAME=Leadquelle Deutschland

# ------------------------------------------------
# ZENDESK (optional)
# ------------------------------------------------
# ZENDESK_SUBDOMAIN=your_subdomain
# ZENDESK_EMAIL=your_email
# ZENDESK_API_TOKEN=your_token
